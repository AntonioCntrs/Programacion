numeros = []
for _ in range(6):
    numero = int(input("Ingresa un número: "))
    numeros.append(numero)

esta_ordenado = numeros == sorted(numeros)
if esta_ordenado:
    print("El arreglo está ordenado de menor a mayor.")
    print("El arreglo ingresado es:", numeros)
else:
    print("El arreglo no está ordenado de menor a mayor.")
    print("El arreglo ordenado sería:", sorted(numeros))
    print("El arreglo ingresado es:", numeros)
